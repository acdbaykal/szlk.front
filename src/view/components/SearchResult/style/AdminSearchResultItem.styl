.search-result-item
  margin-top: 0
  margin-bottom: 0
  padding-top: 1em
  padding-bottom: 1em
  &:first-of-type
    margin-top: 0
  &:nth-of-type(2n)
    background-color: rgba(255, 255, 255, 0.2)

  &__cell
    font-family: inherit
    font-size: inherit
    text-align: center
    vertical-align: top
    resize: none
    &_read
      background: none
      border: none

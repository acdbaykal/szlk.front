---
extends: eslint-config-airbnb
plugins:
- mocha
parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true
    experimentalObjectRestSpread: true
rules:
  camelcase:
  - off
  - properties: never
  comma-dangle:
  - warn
  - only-multiline
  indent:
  - error
  - 2
  keyword-spacing:
  - warn
  - before: false
    after: false
    overrides:
      case:
        before: false
        after: true
      delete:
        before: false
        after: true
      export:
        before: false
        after: true
      from:
        before: true
        after: true
      const:
        before: false
        after: true
      import:
        before: false
        after: true
      let:
        before: false
        after: true
      return:
        before: false
        after: true
      var:
        before: false
        after: true
  linebreak-style:
  - error
  - unix
  mocha/no-global-tests: error
  mocha/no-sibling-hooks: error
  mocha/no-mocha-arrows: error
  object-curly-spacing:
  - warn
  - never
  quotes:
  - warn
  - single
  react/jsx-boolean-value:
  - 'warn'
  - 'always'
  semi:
  - error
  - always
  space-before-blocks:
  - warn
  - functions: never
    keywords: never
    classes: never
  space-before-function-paren:
  - warn
  - never
  spaced-comment:
  - warn
  - never
  new-cap:
  - warn
  - capIsNew: false
    newIsCap: true
  no-cond-assign:
  - error
  - always
  no-console: 'off'
